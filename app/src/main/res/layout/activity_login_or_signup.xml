<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/log"
    tools:context="srilanka.sliit.apps.trubeauty.Login_or_Signup">


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="210dp"
        android:layout_height="140dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:src="@drawable/logo2" />

    <EditText
        android:id="@+id/ed_username"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:layout_alignEnd="@+id/cardView"
        android:layout_below="@+id/imageView3"
        android:layout_marginTop="110dp"
        android:background="#11000000"
        android:ems="10"
        android:hint="Phone Number (Ex:0750999660)"
        android:inputType="number"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textColorHint="#a9acab"
        android:textStyle="bold" />

    <android.support.v7.widget.CardView
        android:id="@+id/cv_login"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/ed_username"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="61dp"
        app:cardBackgroundColor="@color/colorAccent"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignStart="@+id/cv_login"
            android:layout_alignTop="@+id/cv_login">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="Login"
                android:textColor="#fff"
                android:textSize="18sp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="270dp"
        android:layout_height="30dp"
        android:layout_below="@+id/cv_login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="55dp"
        app:cardBackgroundColor="@color/colorPrimary"
        app:cardCornerRadius="8dp"
        app:cardElevation="10dp"
        android:id="@+id/cardView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:id="@+id/tv_salon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="6dp"
                android:textAlignment="center"
                android:layout_weight="1"
                android:text="  Register Your Salon"
                android:textColor="#fff"
                android:textStyle="bold" />

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/tv_error"
        android:layout_width="280dp"
        android:textAlignment="center"
        android:textColor="@color/btnGreen"
        android:layout_height="wrap_content"
        android:layout_above="@+id/cv_login"
        android:layout_alignStart="@+id/ed_username" />

</RelativeLayout>
